<div id="<%= dom_id todoitem %>">
  <% if controller_name == 'todoitems' && action_name != 'show' %>
    <tbody>
      <tr>
        <td><%= todoitem.name %></td>
        <td><%= todoitem.description %></td>
        <td><%= todoitem.deadline %></td>
        <% unless params[:action] == 'index' %>
          <td><%= todoitem.completed %></td>
        <% end %>
        <td>
          <%= link_to "View Todo", todoitem, class: "link-underline link-underline-opacity-0" %>
        </td>
      </tr>
    </tbody>
  <% end %>

  <% if controller_name == 'todoitems' && action_name == 'show' %>
    <h1 class='mt-5 mb-5'>Todo Details</h1>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><strong>Todo</strong></th>
          <th><strong>Description</strong></th>
          <th><strong>Deadline</strong></th>
          <th><strong>Completed</strong></th>
      </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= todoitem.name %></td>
          <td><%= todoitem.description %></td>
          <td><%= todoitem.deadline %></td>
          <td><%= todoitem.completed ? 'Yes ✅' : 'No ℹ️' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
