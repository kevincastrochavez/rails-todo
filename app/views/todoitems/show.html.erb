<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<%= render @todoitem %>

<div class='mt-5'>
  <div class="container">
    <div class="row">
      <div class="col-2 p-0">
        <%= link_to "Back to Todos", todoitems_path, class: "btn btn-outline-secondary" %>
      </div>
      <div class="col-2 p-0 offset-6">
        <%= button_to "Destroy Todo", @todoitem, method: :delete, class: "btn btn-danger" %>
      </div>
      <div class="col-2 p-0">
        <%= link_to "Edit Todo", edit_todoitem_path(@todoitem), class: "btn btn-primary w-100" %>
      </div>
    </div>
  </div>
</div>
